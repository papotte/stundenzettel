{
  "name": "nextn",
  "version": "0.0.0-development",
  "private": false,
  "license": "MPL-2.0",
  "scripts": {
    "dev": "next dev -p 9002",
    "dev:test": "NODE_ENV=test NEXT_PUBLIC_ENVIRONMENT=test next dev -p 9003",
    "build": "NEXT_PUBLIC_ENVIRONMENT=production next build --webpack",
    "start": "next start -p 9004",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.{ts,tsx,js,md,json,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,md,json,yml,yaml}\" --ignore-path .prettierignore",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:ci": "jest --ci --json --coverage --testLocationInResults --outputFile=coverage/report.json",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ci": "npm run emulators:fresh & sleep 15 && playwright test && npm run emulators:stop",
    "test:e2e:all-browsers": "RUN_ALL_BROWSERS=true playwright test",
    "deploy": "firebase deploy",
    "deploy:app": "firebase deploy --only apphosting",
    "postinstall": "playwright install chromium",
    "functions:lint": "eslint functions/",
    "functions:build": "tsc -p functions/tsconfig.json",
    "functions:build:watch": "tsc -p functions/tsconfig.json --watch",
    "functions:serve": "npm run functions:build && firebase emulators:start --only functions",
    "functions:shell": "npm run functions:build && firebase functions:shell",
    "functions:start": "npm run functions:shell",
    "functions:deploy": "firebase deploy --only functions --debug",
    "functions:logs": "firebase functions:log",
    "emulators:start": "npm run functions:build && firebase emulators:start --only functions,firestore,auth --import ./emulator-data --export-on-exit ./emulator-data",
    "emulators:fresh": "npm run functions:build && firebase emulators:start --only functions,firestore,auth --export-on-exit ./emulator-data",
    "emulators:stop": "node scripts/stop-emulators.js",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulator:seed:ci": "node scripts/seed-emulator.js --ci",
    "emulator:seed": "node scripts/seed-emulator.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^16.1.4",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@react-email/render": "2.0.4",
    "@stripe/stripe-js": "^8.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "dotenv": "^17.0.0",
    "exceljs": "^4.4.0",
    "firebase": "^12.0.0",
    "firebase-functions": "^7.0.0",
    "lucide-react": "^0.575.0",
    "next": "^16.1.4",
    "next-intl": "^4.3.4",
    "patch-package": "^8.0.0",
    "react": "^19.0.0",
    "react-day-picker": "^9.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "resend": "^6.1.1",
    "stripe": "18.5.0",
    "tailwind-merge": "3.5.0",
    "tailwindcss-animate": "^1.0.7",
    "web-push": "^3.6.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "firebase-admin": "^13.4.0",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^15.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "semantic-release": "^25.0.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": "24"
  }
}
