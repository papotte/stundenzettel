{
  "name": "nextn",
  "version": "0.0.0-development",
  "private": false,
  "license": "MPL-2.0",
  "scripts": {
    "dev": "next dev --turbopack -p 9002",
    "dev:test": "NEXT_PUBLIC_ENVIRONMENT=test next dev --turbopack -p 9003",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,md,json,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,md,json,yml,yaml}\" --ignore-path .prettierignore",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:ci": "jest --ci --json --coverage --testLocationInResults --outputFile=coverage/report.json",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "deploy": "firebase deploy",
    "deploy:app": "firebase deploy --only apphosting",
    "postinstall": "playwright install",
    "functions:lint": "eslint --ext .js,.ts functions/",
    "functions:build": "tsc -p functions/tsconfig.json",
    "functions:build:watch": "tsc -p functions/tsconfig.json --watch",
    "functions:serve": "npm run functions:build && firebase emulators:start --only functions",
    "functions:shell": "npm run functions:build && firebase functions:shell",
    "functions:start": "npm run functions:shell",
    "functions:deploy": "firebase deploy --only functions --debug",
    "functions:logs": "firebase functions:log",
    "emulators:start": "npm run functions:build && firebase emulators:start --only functions,firestore,auth --import ./emulator-data --export-on-exit ./emulator-data",
    "emulators:fresh": "npm run functions:build && firebase emulators:start --only functions,firestore,auth --export-on-exit ./emulator-data",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "seed:emulator": "node scripts/seed-emulator.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.3.5",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@stripe/stripe-js": "^7.4.0",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "dotenv": "^17.0.0",
    "exceljs": "^4.4.0",
    "firebase": "^12.0.0",
    "firebase-functions": "^6.0.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.4",
    "next-intl": "^4.3.4",
    "patch-package": "^8.0.0",
    "react": "^19.0.0",
    "react-day-picker": "^9.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "stripe": "^18.3.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
