# App Version
NEXT_PUBLIC_APP_VERSION=latest

# Set to 'production' or any other value to use Firebase
NEXT_PUBLIC_ENVIRONMENT=developmen

# Get an API key from Google Cloud Console with "Geocoding API" enabled.
# https://console.cloud.google.com/google/maps-apis/
GOOGLE_MAPS_API_KEY=your_google_api_key

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Other Configuration
NEXT_PUBLIC_TERMLY_WEBSITE_UUID=your_termly_website_uuid_here 

# Datadog Configuration
# Get these values from your Datadog account

# Datadog API Key (for server-side metrics)
DD_API_KEY=your_datadog_api_key_here

# Datadog Site (datadoghq.com for US, datadoghq.eu for EU)
DD_SITE=datadoghq.com

# Environment (development, staging, production)
DD_ENV=development

# Hostname for the agent
DD_HOSTNAME=stundenzettel-app

# Datadog Agent Host (for local development)
DD_AGENT_HOST=localhost

# DogStatsD Port
DD_DOGSTATSD_PORT=8125

# Datadog RUM Application ID (for browser monitoring)
NEXT_PUBLIC_DD_RUM_APPLICATION_ID=your_rum_application_id_here

# Datadog RUM Client Token (for browser monitoring)
NEXT_PUBLIC_DD_RUM_CLIENT_TOKEN=your_rum_client_token_here

# Datadog Site for RUM (same as DD_SITE)
NEXT_PUBLIC_DD_SITE=datadoghq.com

# Environment for RUM (same as DD_ENV)
NEXT_PUBLIC_DD_ENV=development
